{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "src/*": ["./*"],
      "components/*": ["./components/*"],
      "hooks/*": ["./hooks/*"],
      "app/*": ["./app/*"],
      "config/*": ["./config/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    ".postcssrc.js",
    ".stylelintrc.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
