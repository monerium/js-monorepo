{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["STANDALONE", "false"]
    },
    "@monerium/sdk-react-provider#dev": {
      "dependsOn": ["@monerium/sdk#type-map"]
    },
    "generate-docs": {
      "dependsOn": ["build"],
      "outputs": ["docs/packages/**"]
    },
    "lint": {},
    "lint:style": {},
    "pub:pre": {
      "dependsOn": ["build"]
    },
    "start": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "test:watch": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "type-map": {}
  }
}
