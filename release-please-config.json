{
  "pull-request-title-pattern": "Release ${component} ${version} :rocket:",
  "pull-request-header": ":robot: I have created a release *beep* *boop*",
  "changelog-sections": [
    { "type": "feat", "section": "Features", "hidden": false },
    { "type": "fix", "section": "Bug Fixes", "hidden": false },
    { "type": "docs", "section": "Documentation", "hidden": false },
    { "type": "chore", "section": "Miscellaneous", "hidden": false },
    { "type": "refactor", "section": "Refactors", "hidden": false },
    { "type": "revert", "section": "Revert", "hidden": false }
  ],
  "release-type": "node",
  "bump-minor-pre-major": true,
  "packages": {
    "apps/customer": {
      "package-name": "customer"
    },
    "apps/developer": {
      "package-name": "developer"
    },
    "packages/sdk": {
      "package-name": "@monerium/sdk",
      "exclude-paths": ["packages/sdk/docs", "packages/sdk/README.md"]
    },
    "packages/sdk-react-provider": {
      "package-name": "@monerium/sdk-react-provider",
      "exclude-paths": [
        "packages/sdk-react-provider/docs",
        "packages/sdk-react-provider/README.md"
      ]
    }
  },
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/v16.10.2/schemas/config.json"
}
