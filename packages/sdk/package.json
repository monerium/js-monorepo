{
  "name": "@monerium/sdk",
  "version": "2.12.1",
  "description": "Essential tools to interact with the Monerium API, an electronic money issuer.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/index.js",
    "dist/index.mjs",
    "dist/index.d.ts"
  ],
  "scripts": {
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch --onSuccess 'pnpm type-map'",
    "build": "tsup --splitting",
    "build:test": "tsup",
    "type-map": "tsc --emitDeclarationOnly --declaration",
    "lint": "eslint . --fix",
    "pub:pre": "pnpm publish --no-git-checks --dry-run",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/crypto-js": "^4.2.2",
    "jest-fetch-mock": "^3.0.3",
    "jest-localstorage-mock": "^2.4.26",
    "timezone-mock": "^1.3.6",
    "typescript": "latest"
  }
}
