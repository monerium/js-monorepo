{
  "name": "@monerium/openapi",
  "version": "2.0.0",
  "description": "Monerium OpenAPI specification",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monerium/js-monorepo.git",
    "directory": "packages/openapi"
  },
  "bugs": {
    "url": "https://github.com/monerium/js-monorepo/issues"
  },
  "main": "./openapi.yml",
  "files": [
    "openapi.yml",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "redocly preview-docs ./openapi.yml",
    "validate": "redocly lint ./openapi.yml",
    "pub:pre": "pnpm publish --no-git-checks --dry-run",
    "clean": "rm -rf dist node_modules .turbo"
  },
  "devDependencies": {
    "@redocly/cli": "^1.25.0"
  },
  "engines": {
    "node": ">=18"
  }
}
